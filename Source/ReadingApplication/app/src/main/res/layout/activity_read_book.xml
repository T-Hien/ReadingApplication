<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.ReadBookActivity"
    android:background="@color/background_night"
    android:id="@+id/main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#34FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnExitBook"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    android:layout_marginTop="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:id="@+id/btnFavoriteBook"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="250dp"
                        android:layout_marginRight="-5dp"
                        android:src="@drawable/ic_heart_regular"
                        android:layout_marginTop="10dp"/>
                    <ImageView
                        android:id="@+id/btnDetailLike"
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_more_vert_24"
                        android:layout_marginTop="12dp"
                        android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="140dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:id="@+id/imgBookPicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_book_tan_minh"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/txtTitlleBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pháp y Tân Minh"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/txtAuthorBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tác giả: Tần Minh"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/txtGenresBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thể loại: Trinh thám"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="1dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="2dp">
                                <TextView
                                    android:id="@+id/txtStyleBook"
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:text="EPUB"
                                    android:textSize="12sp"
                                    android:paddingTop="3dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textColor="#FFFFFF"
                                    android:background="@color/text_green"/>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:src="@drawable/heart_solid_black"/>
                                        <TextView
                                            android:id="@+id/txtLikes"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:text="0"
                                            android:textColor="#FFFFFF"
                                            android:textSize="15sp"
                                            android:layout_marginLeft="8dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvReading"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="15dp"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="15dp"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/btnReading"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:text="Đọc tiếp"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:background="#E08909"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/rlRoot">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tlReadBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="#FFFFFF"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpListToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_above="@id/tlReadBook"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fmView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="37dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible">
    </FrameLayout>



</RelativeLayout>