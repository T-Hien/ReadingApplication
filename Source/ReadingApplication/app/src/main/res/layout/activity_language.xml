<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LanguageActivity"
    android:orientation="horizontal"
    android:background="@color/background_night">
    <CheckBox
        android:id="@+id/cbVietnamese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_vietnamese"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:button="@drawable/checkbox_selector"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"/>
    <CheckBox
        android:id="@+id/cbEnglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_english"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:button="@drawable/checkbox_selector"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>