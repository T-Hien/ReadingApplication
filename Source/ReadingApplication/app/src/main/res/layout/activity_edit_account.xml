<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditAccountActivity"
    android:background="@color/background_night"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="580dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        android:backgroundTint="#4BFFFFFF"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="360dp">
                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/img_account_boy"/>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/btnEditPicture"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/baseline_edit_square_24"
                    android:layout_marginTop="40dp"/>
            </LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_account_name"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"/>
                    <!-- Cột 2 -->
                    <EditText
                        android:id="@+id/edtUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hiennguyen123"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_name"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"/>
                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Unknow"
                        android:textColorHint="#FFFF"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"/>
                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hiennguyen123@gmail.com"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_phone"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"/>
                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0356458854"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_password"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"/>
                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123123"
                        android:padding="8dp"
                        android:gravity="left"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quyền:"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/txtRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123123"
                        android:padding="8dp"
                        android:gravity="left"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_password_again"
                        android:padding="8dp"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"/>
                    <EditText
                        android:id="@+id/edtPasswordAgain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123123"
                        android:padding="8dp"
                        android:gravity="left"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent" />
                </TableRow>

            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="180dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_corner_account"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/button_update_v2"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:background="@color/orange"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_corner_account"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/btnExit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/button_exit"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:background="@color/orange"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>