<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.ReadingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/layoutreading"
            layout="@layout/layout_toolbar_reading"/>
        <TextView
            android:id="@+id/txtChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Chap0:XX"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Time:"
            android:textStyle="italic"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp">
            <TextView
                android:id="@+id/btnBeforeChap"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="@string/button_before"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_reading_left"/>
            <TextView
                android:id="@+id/btnAfterChap"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:text="@string/button_after"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_button_reading_right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="50dp"
                android:backgroundTint="@color/text_hint_sun">
                <TextView
                    android:id="@+id/btnOutZoom"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/baseline_horizontal_rule_24"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="50dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/text_hint_sun">
                <TextView
                    android:id="@+id/btnInZoom"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/baseline_add_24"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fmView"
        android:layout_width="match_parent"
        android:layout_height="850dp"
        android:visibility="invisible">
    </FrameLayout>


</RelativeLayout>