<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#DC000000">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="360dp"
                    app:cardElevation="2dp">
                    <ImageView
                        android:id="@+id/imgUserFaceComment"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_account_user"/>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtUsernameComment"
                            android:layout_width="180dp"
                            android:layout_height="25dp"
                            android:text="Nguyễn Hiền"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txtChapter"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Chapter 2"
                            android:gravity="right"
                            android:paddingRight="12dp"
                            android:textSize="13sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtTimeComment"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="24 th5,2024"
                            android:textSize="10sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:id="@+id/txtBookName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="24 th5,2024"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:layout_marginRight="10dp"
                            android:textColor="#FFFFFF"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtContentComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuốn sách này hay quá!"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/txtContentReply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bạn bình luận!"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/background_reply">
                    <TextView
                        android:id="@+id/btnReply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phản hồi"
                        android:textColor="@color/white"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/background_delete">
                    <TextView
                        android:id="@+id/btnDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xóa"
                        android:textColor="@color/white"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/lnReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_ln_reply"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="360dp"
                    app:cardElevation="2dp">
                    <ImageView
                        android:id="@+id/imgUserFaceReply"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/img_book_nguoi_don_dep_hien_truong"/>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtUsernameReply"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:text="Unknow"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtTimeReply"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="24 th5,2024"
                        android:textSize="10sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtContentReply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập phản hồi"
                    android:textColorHint="@color/text_reply"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/background_reply">
                    <TextView
                        android:id="@+id/btnAdminReply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gửi"
                        android:textColor="@color/white"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvListReplies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>