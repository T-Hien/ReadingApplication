<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainAdminActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_main_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_main_admin_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginRight="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardElevation="2dp"
                    android:padding="5dp"
                    app:cardCornerRadius="360dp">
                    <ImageView
                        android:id="@+id/btnAdmin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_edit_square_24" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/btnLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thoát"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="11dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnBook"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardForegroundColor="#3752E9">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:src="@drawable/baseline_menu_book_admin24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Sách"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnAuthor"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardForegroundColor="#3F51B5"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:src="@drawable/baseline_supervised_user_circle_admin_24" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Tác giả"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnCategory"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardForegroundColor="#3F51B5">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:src="@drawable/baseline_category_24" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Thể loại"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnComment"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardForegroundColor="#3F51B5"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:src="@drawable/baseline_comment_24" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Bình luận"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnAccount"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardForegroundColor="#3F51B5"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:src="@drawable/baseline_switch_account__blue_24" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Người dùng"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnStatic"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardForegroundColor="#3F51B5"
                android:layout_marginLeft="15dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="65dp"
                        android:src="@drawable/baseline_signal_cellular_alt_24" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Thống kê"
                        android:textColor="#000"
                        android:textSize="18sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>