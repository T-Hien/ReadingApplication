<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.admin.StatisticalActivity"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/black">
                <ImageView
                    android:id="@+id/btnExit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/baseline_arrow_back_24"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thống kê"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="#ED4302B3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="20px">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_menu_book_24"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:id="@+id/txtBook"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sách: 30"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_marginLeft="5px"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="#ED0C0895"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="20px">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_category_white_24"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:id="@+id/txtCategory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Thể loại: 30"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="#ED04593F"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="20px">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_supervised_user_circle_24"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:id="@+id/txtAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tác giả: 30"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="20px">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="#ED857402">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="20px">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_account_circle_24"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:id="@+id/txtReader"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Đọc giả: 3"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="1dp"
                    android:backgroundTint="#EDA8021A"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="20px">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_account_box_24"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:id="@+id/txtStaff"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Quản lý: 30"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thống kê sách được yêu thích"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart0"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/btnAllBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:text="Xem chi tiết"
                    android:background="#116815"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thống kê tác giả có nhiều sách được yêu thích"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/btnAllAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:text="Xem chi tiết"
                    android:background="#116815"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thống kê loại sách được yêu thích"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/btnAllCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:text="Xem chi tiết"
                    android:background="#116815"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thống kê đọc giả đọc lưu trữ sách"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart4"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/btnAllReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:text="Xem chi tiết"
                    android:background="#116815"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:id="@+id/fmView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </FrameLayout>
</RelativeLayout>

